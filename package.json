{
    "name": "vostok-europe",
    "version": "4.0.3",
    "businessName": "vostok",
    "private": true,
    "scripts": {
        "dev": "vite --host",
        "build": "vite build",
        "serve": "vite preview",
        "platforms": "npx cap add ios && npx cap add android",
        "app": "vite build && npx cap copy && npx cap sync"
    },
    "dependencies": {
        "@vueuse/core": "^5.2.0",
        "amplitude-js": "^8.8.0",
        "axios": "^0.21.1",
        "dayjs": "^1.10.5",
        "es6-promise-plugin": "^4.2.2",
        "vee-validate": "4.4.4",
        "vue": "^3.0.5",
        "vue-i18n": "^9.1.6",
        "vue-router": "^4.0.0-0",
        "vuex": "^4.0.0-0",
        "vuex-persistedstate": "^4.1.0",
        "yup": "^0.32.9"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^1.9.4",
        "@vue/compiler-sfc": "^3.2.20",
        "cssnano": "^5.0.2",
        "eslint-plugin-vue": "^7.20.0",
        "postcss-functions": "^4.0.2",
        "postcss-import": "^14.0.2",
        "postcss-nested": "^5.0.5",
        "postcss-preset-env": "^6.7.0",
        "standard": "^16.0.3",
        "stylelint": "^13.13.1",
        "stylelint-config-standard": "^22.0.0",
        "vite": "^2.6.12"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:vue/vue3-recommended"
        ],
        "rules": {
            "template-curly-spacing": [
                "off"
            ],
            "indent": [
                "error",
                4
            ],
            "semi": [
                "error",
                "never"
            ],
            "vue/singleline-html-element-content-newline": [
                "error",
                {
                    "ignoreWhenNoAttributes": true,
                    "ignoreWhenEmpty": true,
                    "ignores": [
                        "router-link"
                    ]
                }
            ],
            "vue/html-indent": [
                "error",
                4,
                {
                    "attribute": 1,
                    "baseIndent": 1,
                    "closeBracket": 0,
                    "alignAttributesVertically": true
                }
            ],
            "vue/script-indent": [
                "error",
                4,
                {
                    "baseIndent": 1
                }
            ],
            "vue/html-self-closing": [
                "error",
                {
                    "html": {
                        "void": "never",
                        "normal": "any",
                        "component": "always"
                    }
                }
            ],
            "vue/max-attributes-per-line": [
                "error",
                {
                    "singleline": 4,
                    "multiline": {
                        "max": 1,
                        "allowFirstLine": false
                    }
                }
            ],
            "vue/no-v-html": "off"
        },
        "overrides": [
            {
                "files": [
                    "*.vue"
                ],
                "rules": {
                    "indent": "off"
                }
            }
        ]
    },
    "stylelint": {
        "env": {
            "browser": true,
            "node": true
        },
        "extends": [
            "stylelint-config-standard"
        ],
        "rules": {
            "at-rule-no-unknown": [
                true,
                {
                    "ignoreAtRules": [
                        "at-root"
                    ]
                }
            ],
            "no-descending-specificity": null,
            "indentation": [
                2,
                {
                    "baseIndentLevel": 1
                }
            ],
            "length-zero-no-unit": [
                true,
                {
                    "ignore": [
                        "custom-properties"
                    ]
                }
            ]
        }
    }
}
